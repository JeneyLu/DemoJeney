            android:layout_height="wrap_content"
            android:text="retrofit Demo" />

        <Button
            android:id="@+id/ormlite_demo_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ormLite Demo" />

        <Button
            android:id="@+id/recycler_view_demo_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recycler view demo" />

        <Button
            android:id="@+id/transparent_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="transparent activity" />

        <Button
            android:id="@+id/tool_bar_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toolbar activity" />

        <Button
            android:id="@+id/dynamic_tool_bar_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dynamic toolbar activity" />

        <Button
            android:id="@+id/wheel_view_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wheelview activity" />

        <Button
            android:id="@+id/progress_button_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="progress button activity" />

        <Button
            android:id="@+id/canvas_demo_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="canvas demo activity" />

        <Button
            android:id="@+id/pull_to_zoom_in_demo_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pull to zoom in demo activity" />

        <Button
            android:id="@+id/sougou_browser_loading_demo_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
