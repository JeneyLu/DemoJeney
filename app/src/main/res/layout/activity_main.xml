        <Button
            android:id="@+id/swipeable_card_demo_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="swipeable card demo activity btn" />

        <Button
            android:id="@+id/viewpager_demo_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="viewpager demo activity btn" />

        <Button
            android:id="@+id/loading_demo_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="loading demo activity btn" />

        <Button
            android:id="@+id/stackview_demo_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stackview demo activity btn" />

        <Button
            android:id="@+id/flippable_stackview_demo_activity_btn"
            android:layout_width="match_parent"
